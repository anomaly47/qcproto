<div class="page-header">
  <h1>Tutorials</h1>
</div>

<% @tutorials.each do |tutorial| %>
<div class="tutorial">
   <div class="page-header">
      <h2><%= tutorial.title %></h2>
  </div>
   <p><%= tutorial.body %></p>
   <div class="meta">
     <%= link_to time_ago_in_words(tutorial.created_at) + " ago", tutorial %> 
     <span class="admin">| 
        <%= link_to "Edit", edit_tutorial_path(tutorial) %> | 
        <%= link_to "Delete", tutorial, method: :delete, data: { confirm: "Are you sure you want to delete this tutorial?"} %>
     </span>
   </div>
   <h5 class="author">Written by, <%= tutorial.author %></h5>

</div>
<% end %>

